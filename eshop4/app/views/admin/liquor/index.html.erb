<table>
  <tr>
    <th><a href="?sort_by=producer_id">Productor</a></th>
    <th><a href="?sort_by=name">Nombre</a></th>
    <th><a href="?sort_by=serial_number">Numero de serie</a></th>
    <th colspan="3"></th>
  </tr>

<% @liquors.each do |liquor| %>
  <tr>
    <td><%= h liquor.producer.name %></td>
    <td><%= h liquor.name %></td>
    <td><%= h liquor.serial_number %></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => liquor %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => liquor  %></td>
    <td><%= button_to 'Borrar', { :action => 'destroy', :id => liquor },
                      data: { confirm: "Are you sure you want to delete liquor #{liquor.name}?" } %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @liquors, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Pagina anterior', :next_label => 'Siguiente Pagina' %>
