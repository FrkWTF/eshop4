<dl>
  <dt>Nombre</dt>
  <dd><%= @liquor.name %></dd>
  <dt>Productor</dt>
  <dd><%= @liquor.producer.name %></dd>
  <dt>Producido el</dt>
  <dd><%= @liquor.produced_at.strftime("%d/%m/%Y at %I:%M%p") %></dd>
  <dt>Suministradores</dt>
  <dd><%= @liquor.supplier_names %></dd>
  <dt>NÃºmero de serie</dt>
  <dd><%= @liquor.serial_number %></dd>
  <dt>Blurb</dt>
  <%= RedCloth.new(@liquor.blurb).to_html.html_safe if @liquor.blurb %>
  <dt>Precio</dt>
  <dd><%= @liquor.price %></dd>
  <dt>Imagen</dt>
  <% if @liquor.cover_image.exists? then %>
    <dd><%= image_tag @liquor.cover_image.url %></dd>
  <% else %>
    <dd><%= image_tag '/missing.png' %></dd>
    <p> There is no cover image attached. Please upload one. </p>
  <% end %>
</dl>

