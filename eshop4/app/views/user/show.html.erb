<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Usuario</dt>
  <dd><%= @user.login %></dd>

  <dt>E-mail</dt>
  <dd><%= @user.email %></dd>

  <dt>Nº de veces identificado</dt>
  <dd><%= @user.login_count %></dd>

  <dt>Última solicitud</dt>
  <dd><%= @user.last_request_at %></dd>

  <% if @user.last_login_at %>
    <dt>Última identificación</dt>
    <dd><%= @user.last_login_at %></dd>
  <% end %>

  <dt>Actual identificación</dt>
  <dd><%= @user.current_login_at %></dd>

  <% if @user.last_login_ip %>
    <dt>IP de la ultima sesión</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>IP de la actual sesión</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
